generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crianca {
  id_crianca      BigInt   @id
  id_responsavel  BigInt
  nome            String
  data_nascimento DateTime
  rg              String
  cpf             String   @unique

  responsavel Responsavel  @relation(fields: [id_responsavel], references: [id_responsavel])
  frequencias Frequencia[]
}

model Responsavel {
  id_responsavel         BigInt @id
  nome                   String
  cpf                    String @unique
  rg                     String
  parentesco_com_crianca String
  telefone               String
  email                  String
  ocupacao               String
  endereco               String

  criancas      Crianca[]
  cestasBasicas CestaBasica[]
}

model Voluntario {
  id_voluntario          BigInt  @id
  nome                   String
  cpf                    String  @unique
  email                  String
  telefone               String
  disponibilidade        String
  area_atuacao           String
  respondeu_questionario Boolean
  aceitou_termos         Boolean
}

model Parceiro {
  id_parceiro  BigInt @id
  nome         String
  tipo         String // "parceiro" ou "patrocinador"
  email        String
  telefone     String
  contribuicao String // "financeira", "material", etc.
}

model Usuario {
  id_usuario BigInt      @id
  nome       String
  email      String      @unique
  senha      String
  perfil     TipoUsuario // "admin" ou "usuario"
}

model Frequencia {
  id_frequencia BigInt   @id
  id_crianca    BigInt
  atividade     String
  data          DateTime
  presenca      Boolean

  crianca Crianca @relation(fields: [id_crianca], references: [id_crianca])
}

model CestaBasica {
  id_cesta       BigInt   @id
  id_responsavel BigInt
  data_entrega   DateTime
  quantidade     Int
  observacoes    String

  responsavel Responsavel @relation(fields: [id_responsavel], references: [id_responsavel])
}

enum TipoUsuario {
  admin
  usuario
}